@page "/companies/details/{Id:guid}"

@attribute [Authorize(Roles = "Admin")]
@inject NavigationManager Navigation
@inject CompanyService CompanyService

<h3>Company Details</h3>

<hr />
@if (company == null)
{
    <p><em>@displayMessage</em></p>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">
            Company Id
        </dt>
        <dd class="col-sm-10">
            @company.Id
        </dd>
        <dt class="col-sm-2">
            Company Name
        </dt>
        <dd class="col-sm-10">
            @company.Name
        </dd>

        <dt class="col-sm-2">
            Assigned Projects
        </dt>
        @if (company.Projects == null)
        {
            <dd class="col-sm-10">
                <em>None</em>
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @foreach (var project in company.Projects)
                {
                    @project.Name<span>&nbsp;&nbsp;</span>
                }
            </dd>
        }
    </dl>
}

@code {
    [Parameter]
    public Guid Id { get; set; }

    public Company company { get; set; }
    public String displayMessage = "Loading Company Details";

    protected override async Task OnInitializedAsync()
    {
        base.OnInitialized();

        company = await Task.Run(() => CompanyService.GetCompanyAsync(Id));
        if (company == null)
        {
            displayMessage = "Company with Id: " + Id + " Not Found";
        }
    }
}
