@page "/companies/details/{Id:guid}"

@attribute [Authorize(Roles = "Admin")]
@inject NavigationManager Navigation
@inject CompanyService CompanyService

<h3>Company Details</h3>

<hr />
@if (company == null)
{
    <p><em>Loading Company Details</em></p>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">
            Company Id
        </dt>
        <dd class="col-sm-10">
            @company.Id
        </dd>
        <dt class="col-sm-2">
            Company Name
        </dt>
        <dd class="col-sm-10">
            @company.Name
        </dd>

        @* LINQ might be needed to get this - check *@
        <dt class="col-sm-2">
            Assigned Projects
        </dt>
        @if (company.Projects != null)
        {
            @foreach (var project in company.Projects)
            {
                <dd class="col-sm-10">
                    @project.Name
                </dd>
            }
        }
        else
        {
            <dd class="col-sm-10">
                <em>None</em>
            </dd>
        }
    </dl>
}
@code {
    [Parameter]
    public Guid Id { get; set; }
    public Company company { get; set; }

    protected override async Task OnInitializedAsync()
    {
        base.OnInitialized();

        company = await Task.Run(() => CompanyService.GetCompanyAsync(Id));
    }
}
