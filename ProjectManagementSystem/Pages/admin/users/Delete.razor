@page "/users/delete/{Id}"

@attribute [Authorize(Roles = "Admin")]
@inject NavigationManager Navigation
@inject UserService UserService

@if (user == null)
{
    <p><em>@displayMessage</em></p>
}
else
{
    <h3>Are you sure you want to delete this User?</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            User Id
        </dt>
        <dd class="col-sm-10">
            @user.Id
        </dd>
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @user.UserName
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @user.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @user.LastName
        </dd>
        <dt class="col-sm-2">
            User Role
        </dt>
        @if (user.UserRoles.Count == 0)
        {
            <dd class="col-sm-10 text-black-50">
                Not Assigned
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @foreach (var val in user.UserRoles)
                {
                    @val.Role.Name<span>&nbsp;&nbsp;</span>
                }
            </dd>
        }


        <dt class="col-sm-2">
            Assigned Projects
        </dt>
        @if (user.Projects != null)
        {
            @foreach (var project in user.Projects)
            {
                <dd class="col-sm-10">
                    @project.Name<span>&nbsp;&nbsp;</span>
                </dd>
            }
        }
        else
        {
            <dd class="col-sm-10">
                <em>None</em>
            </dd>
        }

        <dt class="col-sm-2">
            Assigned Tickets
        </dt>
        @if (user.Tickets != null)
        {
            <dd class="col-sm-10">
                <TicketsTable Tickets="user.Tickets" />
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                <em>None</em>
            </dd>
        }
    </dl>

    <button class="btn btn-danger" @onclick="DeleteUser">
        <span class="oi oi-trash" aria-hidden="true"></span> Delete
    </button>
}

@code {
    [Parameter]
    public String Id { get; set; }
    public ApplicationUser user { get; set; }

    public String displayMessage = "Loading User Details";

    protected override async Task OnInitializedAsync()
    {
        base.OnInitialized();

        user = await Task.Run(() => UserService.GetUserAsync(Id));
        if (user == null)
        {
            displayMessage = "User with Id: " + Id + " Not Found";
        }
    }

    private async Task DeleteUser()
    {
        await UserService.DeleteUserAsync(user);
        Navigation.NavigateTo("/users");        // redirect to users page
    }
}
