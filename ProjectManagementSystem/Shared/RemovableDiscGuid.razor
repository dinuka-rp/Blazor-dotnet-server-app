<div class="btn btn-outline-info">
    @DiscName <span class="oi oi-minus" aria-hidden="true" @onclick="Delete_Click"></span>
</div>

@code {
    [Parameter]
    public String DiscName { get; set; }

    [Parameter]
    public Guid DiscId { get; set; }

    [Parameter]
    public EventCallback<Guid> OnEntityUnassignedGuid { get; set; }

    protected async Task Delete_Click()
    {
        await OnEntityUnassignedGuid.InvokeAsync(DiscId);
    }
}
