@inject NavigationManager Navigation

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-light">
            @* TODO: add table sort *@
            <tr>
                <th style="width:30%">Id</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Companies)
            {
            <tr>
                <td>@company.Id</td>
                <td>@company.Name</td>
                <td>
                    @* TODO: style add padding *@
                    <a class="" href="companies/edit/@company.Id">
                        <span class="oi oi-pencil" aria-hidden="true"></span>
                    </a>
                    <a class="" href="companies/details/@company.Id">
                        <span class="oi oi-document" aria-hidden="true"></span>
                    </a>
                    <a class="text-danger" href="companies/delete/@company.Id">
                        <span class="oi oi-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


@code {
    [Parameter]
    public List<Company> Companies { get; set; }
}
