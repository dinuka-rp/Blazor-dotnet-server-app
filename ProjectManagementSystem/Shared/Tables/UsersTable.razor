<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-light">
            @* TODO: add table sort *@
            <tr>
                <th style="width:30%">Id</th>
                <th>Name</th>
                <th>Username</th>
                <th>User Role</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>
                        @user.FirstName @user.LastName
                    </td>
                    <td>
                        @user.UserName
                    </td>
                    @if (user.UserRoles == null)
                    {
                        <td><em>No Role</em></td>
                    }
                    else
                    {
                        <td>
                            @foreach (var val in user.UserRoles)
                            {
                                @val.Role.Name
                            }
                        </td>
                    }

                    <td>
                        @* TODO: style add padding *@
                        <a class="" href="users/edit/@user.Id">
                            <span class="oi oi-pencil" aria-hidden="true"></span>
                        </a>
                        <a class="" href="users/details/@user.Id">
                            <span class="oi oi-document" aria-hidden="true"></span>
                        </a>
                        <a class="text-danger" href="users/delete/@user.Id">
                            <span class="oi oi-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@code {
    [Parameter]
    public List<ApplicationUser> Users { get; set; }
}
