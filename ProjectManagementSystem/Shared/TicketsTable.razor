@using ProjectManagementSystem.Data

@* TODO: create a common layout for all tables and embed this in that - similar to MainLayout - check the possibility *@

<h3>Tickets</h3>

@* TODO: add table filter *@

<table class="table">
    <thead>
        @* TODO: add table sort *@
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>State</th>
            <th>Assignee/s</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Tickets)
        {
        <tr>
            <td>@ticket.Id</td>
            <td>@ticket.Description</td>
            <td>@ticket.Status</td>
            <td>@ticket.Assignees[0].Name</td>
        @* TODO: display multiple assignees here? *@
        </tr>
        }
    </tbody>
</table>


@* add ticket button *@


@code {
    [Parameter]
    public Ticket[] Tickets { get; set; }
}
